´´ Devuelve una cadena ajustada dependiendo los 3 parametros que pasén
  `$1 = Caracter
  `$2 = Tamano
  `$3 = Cadena

C_STRING(80;$valor)
$Esp:=$1
$3:=Replace string($3;Char(13);"")
$3:=Replace string($3;Char(10);"")
If (Length($3)>$2)
  $valor:=Substring($3;1;$2)
Else 
	$valor:=($Esp*($2-Length($3)))
	If ($Esp="0")
		$valor:=$valor+$3
	Else 
		$valor:=$3+$valor
	End if 
End if 
$0:=$valor